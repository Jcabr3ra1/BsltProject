	"item": [
		{
			"name": "Seguridad - Autenticación",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData && jsonData.token) {",
									"    pm.environment.set(\"token\", jsonData.token);",
									"    console.log(\"Token guardado en variable de entorno\");",
									"    ",
									"    // Guardar el ID del usuario si está disponible",
									"    if (jsonData.user && jsonData.user.id) {",
									"        pm.environment.set(\"userId\", jsonData.user.id);",
									"        console.log(\"ID de usuario guardado: \" + jsonData.user.id);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@bsltproject.com\",\n    \"password\": \"Admin123*\"\n}"
						},
						"url": {
							"raw": "{{apiGatewayUrl}}/seguridad/autenticacion/login",
							"host": [
								"{{apiGatewayUrl}}"
							],
							"path": [
								"seguridad",
								"autenticacion",
								"login"
							]
						},
						"description": "Iniciar sesión en el sistema"
					},
					"response": []
				},
				{
					"name": "Registro",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"nombre\": \"Usuario Prueba\",\n    \"apellido\": \"Apellido Prueba\",\n    \"email\": \"prueba@bsltproject.com\",\n    \"password\": \"Prueba123*\"\n}"
						},
						"url": {
							"raw": "{{apiGatewayUrl}}/seguridad/autenticacion/registro",
							"host": [
								"{{apiGatewayUrl}}"
							],
							"path": [
								"seguridad",
								"autenticacion",
								"registro"
							]
						},
						"description": "Registrar un nuevo usuario"
					},
					"response": []
				},
				{
					"name": "Verificar Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"token\": \"{{token}}\"\n}"
						},
						"url": {
							"raw": "{{apiGatewayUrl}}/seguridad/autenticacion/verificar-token",
							"host": [
								"{{apiGatewayUrl}}"
							],
							"path": [
								"seguridad",
								"autenticacion",
								"verificar-token"
							]
						},
						"description": "Verificar la validez de un token JWT"
					},
					"response": []
				},
				{
					"name": "Cerrar Sesión",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{apiGatewayUrl}}/seguridad/cerrar-sesion",
							"host": [
								"{{apiGatewayUrl}}"
							],
							"path": [
								"seguridad",
								"cerrar-sesion"
							]
						},
						"description": "Cerrar sesión en el sistema"
					},
					"response": []
				}
			],
			"description": "Endpoints relacionados con la autenticación de usuarios"
